{% block title %} default {% endblock %}
{% block body %}
	<!-- BEGIN PAGE CONTENT-->
	{% form_theme form 'CommonBundle:Form:bootstrap_3_horizontal_layout.html.twig' %}
	{{ form_start(form, {'action': path('/admin/form'), 'method': 'POST', 'attr': {'class' : ' form-row-sepe'}}) }}
	
	{{ form_label(form.parentTest, label|default(null),{'label_attr': {'class' : 'control-label col-md-3'}}) }}
	{{ form_widget(form.parentTest, {'attr': {'class' : 'form-control input-xlarge select2me', 'data-placeholder': '--请选择--', 'data-modules': 'dropdowns'}}) }}
	{{ form_errors(form.parentTest, {'error_attr': {'class' : 'asdfsd'}}) }}

	{{ form_label(form.status, label|default(null),{'label_attr': {'class' : 'col-md-3'}}) }}
	{{ form_widget(form.status) }}
	{{ form_errors(form.status) }}
	{{ form_end(form)}}
    <!-- END PAGE CONTENT-->
{% endblock %}

