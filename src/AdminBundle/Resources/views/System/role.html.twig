{% extends 'AdminBundle:layout:default.html.twig' %}
{% block title %} 添加角色 {% endblock %}
{% block body %}
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">
        <div class="col-md-12">
            <!-- Begin: life time stats -->
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift font-green-sharp"></i>
                        <span class="caption-subject font-green-sharp bold uppercase">角色管理</span>
                        <span class="caption-helper">help</span>
                    </div>
                    <div class="actions">
                        <a class="btn btn-default btn-circle" href="{{ path('/admin/system/editRole') }}">
                            <i class="fa fa-plus"></i>
                            <span class="hidden-480">添加角色</span>
                        </a>
                        <div class="btn-group">
                            <a class="btn btn-default btn-circle" href="table_ajax.html#" data-toggle="dropdown">
                                <i class="fa fa-share"></i>
                                <span class="hidden-480">工具 </span>
                                <i class="fa fa-angle-down"></i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li>
                                    <a href="table_ajax.html#">
                                Export to Excel </a>
                                </li>
                                <li>
                                    <a href="table_ajax.html#">
                                Export to CSV </a>
                                </li>
                                <li>
                                    <a href="table_ajax.html#">
                                Export to XML </a>
                                </li>
                                <li class="divider">
                                </li>
                                <li>
                                    <a href="table_ajax.html#">
                                Print Invoices </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-container">
                        <div class="table-actions-wrapper">
                            <span>
                        </span>
                            <select class="table-group-action-input form-control input-inline input-small input-sm">
                                <option value="">待审核</option>
                                <option value="Cancel">投标中</option>
                                <option value="Cancel">还款中</option>
                                <option value="Cancel">已流标</option>
                                <option value="Close">已完成</option>
                            </select>
                            <button class="btn btn-sm yellow table-group-action-submit"><i class="fa fa-check"></i> Submit</button>
                        </div>
                        <form class="data-table">
                        <table class="table table-striped table-bordered table-hover" data-modules="dataTablesAjax" data-ajax-url="{{ path('/admin/system/role') }}" data-modal-save="{{ path('/admin/system/editRole') }}" data-modal-del="path('/admin/system/editRole', {'pid': 1})" data-source="admin/role">
                            <thead>
                                <tr role="row" class="heading">
                                    <th width="5%"><input type="checkbox" value="" class="group-checkable"></th>
                                    <th width="15%" data-order="customer">职位名称</th>

                                    <th width="10%" data-order="price">是否启用</th>
                                    <th width="10%">修改人 </th>
                                    <th width="10%">修改时间 </th>
                                    <th width="29%">操作</th>
                                </tr>
                            </thead>
                            <tbody>

                            </tbody>
                        </table>
                        </form>
                    </div>
                </div>
            </div>
            <!-- End: life time stats -->
        </div>
    </div>
    <!-- END PAGE CONTENT-->
{% endblock %}

{% block javascripts %}
	<script type="text/javascript">
		require(['admin', 'vue', 'core', 'tools'], function(Admin, Vue, Core, Tools) {
            
		});
	</script>
{% endblock %}
