<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <meta content="" name="description" />
    <meta content="" name="author" />
    <link href="{{ asset('static/plugins/font-awesome/css/font-awesome.min.css')}}" rel="stylesheet" type="text/css">
    <link href="{{ asset('static/plugins/simple-line-icons/simple-line-icons.min.css')}}" rel="stylesheet" type="text/css">
    <link href="{{ asset('static/plugins/bootstrap/css/bootstrap.min.css')}}" rel="stylesheet" type="text/css">
    <link href="{{ asset('static/plugins/uniform/css/uniform.default.css')}}" rel="stylesheet" type="text/css">
    <link href="{{ asset('static/modules/admin/pages/css/login-soft.css')}}" rel="stylesheet" type="text/css">
    <link href="{{ asset('static/global/components.css')}}" rel="stylesheet" type="text/css">
    <link href="{{ asset('static/global/plugins.css')}}" rel="stylesheet" type="text/css">
    <link href="{{ asset('static/modules/admin/layout/css/layout.css')}}" rel="stylesheet" type="text/css">
    <link href="{{ asset('static/modules/admin/layout/css/themes/default.css')}}" rel="stylesheet" type="text/css">
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body class="login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="index.html">
        <img src="/static/modules/admin/logo-light.png" alt=""/>
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
    <div class="menu-toggler sidebar-toggler">
    </div>
    <!-- END SIDEBAR TOGGLER BUTTON -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        {% block body %}{% endblock %}
        
        <!-- END LOGIN FORM -->
    </div>
    <script src="{{ asset('static/require.js') }}"></script>
    <script src="{{ asset('static/config.js') }}"></script>
    <script src="{{ asset('static/plugins/jquery.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('static/plugins/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('static/plugins/uniform/jquery.uniform.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('static/plugins/backstretch/jquery.backstretch.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('static/modules/admin/scripts/metronic.js') }}" type="text/javascript"></script>
    <script src="{{ asset('static/modules/admin/layout/scripts/layout.js') }}" type="text/javascript"></script>
    {% block javascripts %}{% endblock %}
    <script type="text/javascript">
    $(document).ready(function(){
        Metronic.init(); // init metronic core components
        Layout.init();
        $.backstretch([
            "{{ asset('static/img/media/adminpassportbg/1.jpg') }}",
            "{{ asset('static/img/media/adminpassportbg/2.jpg') }}",
            "{{ asset('static/img/media/adminpassportbg/3.jpg') }}",
            "{{ asset('static/img/media/adminpassportbg/4.jpg') }}",
            ], {
              fade: 1000,
              duration: 8000
        });
    });
    </script>
</body>
</html>