<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\SignEvent" table="sign_event">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="month" type="integer" column="month" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">日期：201502</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="eventType" type="boolean" column="event_type" nullable="false">
      <options>
        <option name="comment">1累计奖励，2连续奖励</option>
        <option name="default">1</option>
      </options>
    </field>
    <field name="eventCase" type="boolean" column="event_case" nullable="false">
      <options>
        <option name="comment">条件，例如：5，累计5次签到，连续5次签到</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="eventPrize" type="boolean" column="event_prize" nullable="false">
      <options>
        <option name="comment">事件对应的奖品ID，对应prize表</option>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
