<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\MemberIntegral" table="member_integral">
    <indexes>
      <index name="uid" columns="uid"/>
      <index name="type" columns="type"/>
      <index name="add_time" columns="add_time"/>
      <index name="integral" columns="integral"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="uid" type="integer" column="uid" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">用户ID</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="fromUid" type="integer" column="from_uid" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">好友ID</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="type" type="boolean" column="type" nullable="false">
      <options>
        <option name="comment">奖励类型：1网站签到..见member_integtral.php</option>
        <option name="default">1</option>
      </options>
    </field>
    <field name="integral" type="integer" column="integral" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">影响总积分，正为获取，负为使用</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="baseIntegral" type="integer" column="base_integral" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">影响基础积分</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="vipIntegral" type="integer" column="vip_integral" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">vip额外积分</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="info" type="string" column="info" length="50" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">备注信息</option>
        <option name="default"/>
      </options>
    </field>
    <field name="addTime" type="integer" column="add_time" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">时间</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="addMonth" type="integer" column="add_month" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">添加日期：201502</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="addDay" type="integer" column="add_day" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">添加日期：20150101</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="client" type="boolean" column="client" nullable="false">
      <options>
        <option name="comment">1:web,2:android,3:ios,4:wap</option>
        <option name="default">1</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
