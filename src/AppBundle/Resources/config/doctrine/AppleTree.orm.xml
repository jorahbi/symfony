<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\AppleTree" table="apple_tree">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="uid" type="integer" column="uid" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">用户ID</option>
      </options>
    </field>
    <field name="addTime" type="integer" column="add_time" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">操作时间</option>
      </options>
    </field>
    <field name="type" type="integer" column="type" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">兑换类型 1: 果核 2:水壶 3:果树</option>
      </options>
    </field>
    <field name="core" type="integer" column="core" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">剩余果核</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="water" type="integer" column="water" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">剩余水壶</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="tree" type="integer" column="tree" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">召唤树总数</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="num" type="integer" column="num" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">操作数量</option>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
