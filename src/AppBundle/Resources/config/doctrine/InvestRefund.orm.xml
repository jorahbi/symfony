<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\InvestRefund" table="invest_refund">
    <unique-constraints>
      <unique-constraint name="out_trade_no" columns="out_trade_no"/>
    </unique-constraints>
    <id name="refundId" type="integer" column="refund_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="uid" type="integer" column="uid" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">用户ID</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="bid" type="integer" column="bid" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">标ID</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="investId" type="integer" column="invest_id" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">投资ID</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="outTradeNo" type="string" column="out_trade_no" length="50" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="default"/>
      </options>
    </field>
    <field name="origOuterTradeNo" type="string" column="orig_outer_trade_no" length="50" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="default"/>
      </options>
    </field>
    <field name="refundAmount" type="decimal" column="refund_amount" precision="15" scale="2" nullable="true">
      <options>
        <option name="comment">退款金额</option>
        <option name="default">0.00</option>
      </options>
    </field>
    <field name="summary" type="string" column="summary" length="255" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">退款原因</option>
        <option name="default"/>
      </options>
    </field>
    <field name="refundStatus" type="boolean" column="refund_status" nullable="true">
      <options>
        <option name="comment">0待处理&#13;
1失败&#13;
2成功</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="info" type="string" column="info" length="255" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment"> 备注</option>
        <option name="default"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
