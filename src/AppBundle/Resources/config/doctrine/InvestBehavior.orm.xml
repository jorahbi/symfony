<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\InvestBehavior" table="invest_behavior">
    <indexes>
      <index name="uid" columns="uid"/>
      <index name="createtime" columns="createtime"/>
      <index name="type" columns="type"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="uid" type="integer" column="uid" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">用户id</option>
      </options>
    </field>
    <field name="activityId" type="integer" column="activity_id" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">活动Id</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="bid" type="integer" column="bid" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">标id</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="debtId" type="integer" column="debt_id" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">债转标id</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="money" type="decimal" column="money" precision="15" scale="2" nullable="false">
      <options>
        <option name="comment">投资金额</option>
      </options>
    </field>
    <field name="status" type="boolean" column="status" nullable="false">
      <options>
        <option name="comment">状态(0-&gt;未支付或支付失败，1-&gt;支付成功)</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="type" type="boolean" column="type" nullable="false">
      <options>
        <option name="comment">类型(0-&gt;投资，1-&gt;还款)</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="orderNo" type="string" column="order_no" length="21" nullable="false">
      <options>
        <option name="fixed">1</option>
        <option name="comment">支付订单生成id</option>
      </options>
    </field>
    <field name="extra" type="text" column="extra" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">扩展(序列化存储)</option>
      </options>
    </field>
    <field name="createtime" type="integer" column="createtime" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">创建时间</option>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
