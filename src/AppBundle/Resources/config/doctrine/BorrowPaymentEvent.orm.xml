<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\BorrowPaymentEvent" table="borrow_payment_event">
    <unique-constraints>
      <unique-constraint name="order_no" columns="order_no"/>
    </unique-constraints>
    <id name="eid" type="integer" column="eid">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="uid" type="integer" column="uid" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">借款人ID</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="money" type="decimal" column="money" precision="15" scale="2" nullable="true">
      <options>
        <option name="comment">金额</option>
        <option name="default">0.00</option>
      </options>
    </field>
    <field name="repayDate" type="integer" column="repay_date" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">还款日期 Ymd 格式</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="orderNo" type="string" column="order_no" length="50" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">sina订单号</option>
        <option name="default"/>
      </options>
    </field>
    <field name="eStatus" type="boolean" column="e_status" nullable="true">
      <options>
        <option name="comment">1：未处理&#13;
 2：已收款 3:已还款 4：待回调</option>
        <option name="default">1</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
