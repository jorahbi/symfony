<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\WheelPrizeLog" table="wheel_prize_log">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="uid" type="integer" column="uid" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">用户ID</option>
      </options>
    </field>
    <field name="prizeId" type="integer" column="prize_id" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">奖品ID</option>
      </options>
    </field>
    <field name="addTime" type="integer" column="add_time" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">操作时间</option>
      </options>
    </field>
    <field name="status" type="integer" column="status" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">0: 未发放 1: 已发放 2: 用户赠送 3: 用户转让</option>
      </options>
    </field>
    <field name="toUid" type="integer" column="to_uid" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">赠送/转让人ID</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="isSign" type="integer" column="is_sign" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">是否签到抽奖</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="grantTime" type="integer" column="grant_time" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">奖励发放时间</option>
      </options>
    </field>
    <field name="client" type="integer" column="client" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">客户端</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
