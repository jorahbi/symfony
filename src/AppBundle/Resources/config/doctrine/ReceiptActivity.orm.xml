<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\ReceiptActivity" table="receipt_activity">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="uid" type="integer" column="uid" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">用户ID</option>
      </options>
    </field>
    <field name="prizeId" type="integer" column="prize_id" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">奖品ID  1:'京东E卡'; 2:'天天果园充值卡'; 3:'家乐福购物卡'; 4:'星巴克星礼卡'; 5:'沃尔玛购物卡'; 6:'亚马逊礼品卡'; </option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="addtime" type="integer" column="addtime" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">记录时间</option>
      </options>
    </field>
    <field name="status" type="integer" column="status" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">是否完成投资</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="investId" type="integer" column="invest_id" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">投资ID</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
