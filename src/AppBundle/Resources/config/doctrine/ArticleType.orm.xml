<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\ArticleType" table="article_type">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="pid" type="integer" column="pid" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">上级分类:0为顶级分类</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="pnum" type="integer" column="pnum" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">父类数量</option>
        <option name="default">1</option>
      </options>
    </field>
    <field name="type" type="boolean" column="type" nullable="false">
      <options>
        <option name="comment">分类类型：0分类1跳转链接2文章</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="name" type="string" column="name" length="40" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">类型名称</option>
        <option name="default"/>
      </options>
    </field>
    <field name="url" type="string" column="url" length="200" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">跳转路径</option>
        <option name="default"/>
      </options>
    </field>
    <field name="intro" type="string" column="intro" length="200" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">分类简介|文章摘要</option>
        <option name="default"/>
      </options>
    </field>
    <field name="content" type="text" column="content" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">分类内容</option>
      </options>
    </field>
    <field name="sort" type="integer" column="sort" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">分类排序：数字越大越靠前</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="status" type="boolean" column="status" nullable="false">
      <options>
        <option name="comment">状态：0隐藏1显示</option>
        <option name="default">1</option>
      </options>
    </field>
    <field name="column" type="boolean" column="column" nullable="false">
      <options>
        <option name="comment">所属栏目:1关于我们，2帮助中心</option>
        <option name="default">1</option>
      </options>
    </field>
    <field name="warning" type="boolean" column="warning" nullable="false">
      <options>
        <option name="comment">是否异常：0正常1异常</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="seoTitle" type="string" column="seo_title" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="seoDes" type="text" column="seo_des" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="seoKwd" type="text" column="seo_kwd" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
