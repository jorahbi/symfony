<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\CustomServiceMessage" table="custom_service_message">
    <indexes>
      <index name="uid" columns="uid"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="uid" type="integer" column="uid" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">用户id</option>
      </options>
    </field>
    <field name="cno" type="string" column="cno" length="10" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">客服工号</option>
      </options>
    </field>
    <field name="serviceMessage" type="string" column="service_message" length="50" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">客服留言</option>
      </options>
    </field>
    <field name="addtime" type="datetime" column="addtime" nullable="true">
      <options>
        <option name="comment">留言时间</option>
      </options>
    </field>
    <field name="type" type="integer" column="type" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">0 默认为客服手动输入，1 拨打电话，2 接到电话，3 呼出留言 4接入留言</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="top" type="integer" column="top" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">0 不置顶 1 置顶</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="topTime" type="integer" column="top_time" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">置顶/取消置顶修改时间</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
