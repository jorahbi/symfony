<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\BorrowRule" table="borrow_rule">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">费用/奖励名称</option>
        <option name="default"/>
      </options>
    </field>
    <field name="cate" type="boolean" column="cate" nullable="false">
      <options>
        <option name="comment">规则大类：1|费用，2|奖励，3|优惠</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="type" type="boolean" column="type" nullable="false">
      <options>
        <option name="comment">费用/奖励规则类型</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="func" type="string" column="func" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">计算的方法（来源模型/App/Lib/Model/BorrowRuleModel.class.php类中的方法）</option>
        <option name="default"/>
      </options>
    </field>
    <field name="param" type="string" column="param" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">关键参数</option>
        <option name="default"/>
      </options>
    </field>
    <field name="sign" type="boolean" column="sign" nullable="false">
      <options>
        <option name="comment">正负符号：1|+，2|-</option>
        <option name="default">1</option>
      </options>
    </field>
    <field name="minVal" type="string" column="min_val" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">收费金额下限</option>
        <option name="default"/>
      </options>
    </field>
    <field name="maxVal" type="string" column="max_val" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">收费金额上限</option>
        <option name="default"/>
      </options>
    </field>
    <field name="status" type="boolean" column="status" nullable="false">
      <options>
        <option name="comment">状态：1|启用，2|禁用</option>
        <option name="default">1</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
