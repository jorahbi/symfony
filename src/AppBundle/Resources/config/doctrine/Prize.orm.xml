<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Prize" table="prize">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="prizeName" type="string" column="prize_name" length="50" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">奖品名称</option>
        <option name="default"/>
      </options>
    </field>
    <field name="prizeType" type="boolean" column="prize_type" nullable="false">
      <options>
        <option name="comment">奖品类型：1积分2红包...见prize_type文件</option>
        <option name="default">1</option>
      </options>
    </field>
    <field name="prizePrice" type="integer" column="prize_price" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">单价</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="prizeIntro" type="string" column="prize_intro" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">奖品描述</option>
        <option name="default"/>
      </options>
    </field>
    <field name="prizeCover" type="string" column="prize_cover" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">奖品封面</option>
        <option name="default"/>
      </options>
    </field>
    <field name="prizeTotal" type="integer" column="prize_total" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">奖品总数</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="prizeCount" type="integer" column="prize_count" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">已兑换数量</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="baseMoney" type="integer" column="base_money" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
