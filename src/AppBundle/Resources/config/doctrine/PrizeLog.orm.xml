<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\PrizeLog" table="prize_log">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="uid" type="integer" column="uid" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">用户ID</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="getType" type="boolean" column="get_type" nullable="false">
      <options>
        <option name="comment">活动类型：见prize_get_type.php</option>
        <option name="default">1</option>
      </options>
    </field>
    <field name="getId" type="integer" column="get_id" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">奖品的获取ID</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="prizeId" type="integer" column="prize_id" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">奖品ID，关联prize</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="address" type="string" column="address" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">收货地址</option>
        <option name="default"/>
      </options>
    </field>
    <field name="contact" type="string" column="contact" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">联系人</option>
        <option name="default"/>
      </options>
    </field>
    <field name="contactPhone" type="string" column="contact_phone" length="20" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">联系人电话</option>
        <option name="default"/>
      </options>
    </field>
    <field name="phone" type="string" column="phone" length="15" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">手机号码</option>
        <option name="default"/>
      </options>
    </field>
    <field name="addTime" type="integer" column="add_time" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">生成记录时间</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="getTime" type="integer" column="get_time" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">获得奖品时间</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="dealTime" type="integer" column="deal_time" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">处理时间</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="status" type="boolean" column="status" nullable="false">
      <options>
        <option name="comment">是否完成：1未生效,2已生效,3已完成</option>
        <option name="default">1</option>
      </options>
    </field>
    <field name="amount" type="integer" column="amount" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">奖品价值</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="fromUid" type="integer" column="from_uid" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">来源用户</option>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
