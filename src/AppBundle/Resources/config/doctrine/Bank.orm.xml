<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Bank" table="bank">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="bankName" type="string" column="bank_name" length="50" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">银行名称</option>
        <option name="default"/>
      </options>
    </field>
    <field name="bankCode" type="string" column="bank_code" length="50" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">银行代码</option>
        <option name="default"/>
      </options>
    </field>
    <field name="isBindcard" type="boolean" column="is_bindcard" nullable="false">
      <options>
        <option name="comment">是否能绑卡(提现)：1|是，2|否</option>
        <option name="default">1</option>
      </options>
    </field>
    <field name="isQuickpay" type="boolean" column="is_quickpay" nullable="false">
      <options>
        <option name="comment">是否支持绑卡支付：1|是，2|否</option>
        <option name="default">1</option>
      </options>
    </field>
    <field name="isCharge" type="boolean" column="is_charge" nullable="false"/>
    <field name="chargeLimit" type="text" column="charge_limit" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">充值限额</option>
      </options>
    </field>
    <field name="status" type="boolean" column="status" nullable="false">
      <options>
        <option name="comment">状态：1|有效，2|无效</option>
        <option name="default">1</option>
      </options>
    </field>
    <field name="forType" type="boolean" column="for_type" nullable="false">
      <options>
        <option name="comment">针对用户 0 : 所有用户; 1 : 普通个人; 2 : 企业用户;</option>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
