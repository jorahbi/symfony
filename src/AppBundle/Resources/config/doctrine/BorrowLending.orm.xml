<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\BorrowLending" table="borrow_lending">
    <id name="bid" type="integer" column="bid"/>
    <id name="debtId" type="integer" column="debt_id"/>
    <field name="lendingStatus" type="boolean" column="lending_status" nullable="false">
      <options>
        <option name="comment">放款状态：1|申请中，2|审核中，3|已审核，4|已放款，5|放款中</option>
        <option name="default">1</option>
      </options>
    </field>
    <field name="loanFee" type="decimal" column="loan_fee" precision="10" scale="2" nullable="false">
      <options>
        <option name="comment">借款管理费</option>
        <option name="default">0.00</option>
      </options>
    </field>
    <field name="orderNo" type="string" column="order_no" length="32" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">放款订单号</option>
        <option name="default"/>
      </options>
    </field>
    <field name="opApply" type="integer" column="op_apply" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">申请操作员</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="applyTime" type="integer" column="apply_time" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">申请时间</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="opVerify" type="integer" column="op_verify" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">审核操作员</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="verifyTime" type="integer" column="verify_time" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">审核时间</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="opConfirm" type="integer" column="op_confirm" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">放款操作员</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="confirmTime" type="integer" column="confirm_time" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">放款时间</option>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
