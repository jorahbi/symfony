<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\BorrowRepayment" table="borrow_repayment">
    <indexes>
      <index name="invest_id" columns="invest_id,status,deadline"/>
      <index name="borrow_id" columns="bid,sort_order,receiver"/>
      <index name="pay_date" columns="pay_date"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="order_no" columns="order_no"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="bid" type="integer" column="bid" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">标id</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="debtId" type="integer" column="debt_id" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">债权转让子ID</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="payId" type="integer" column="pay_id" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">合约还款id</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="receiver" type="integer" column="receiver" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">收益用户id</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="investId" type="integer" column="invest_id" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">投资记录id</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="capital" type="decimal" column="capital" precision="15" scale="2" nullable="false">
      <options>
        <option name="comment">应还本金</option>
        <option name="default">0.00</option>
      </options>
    </field>
    <field name="interest" type="decimal" column="interest" precision="15" scale="2" nullable="false">
      <options>
        <option name="comment">应还利息</option>
        <option name="default">0.00</option>
      </options>
    </field>
    <field name="fee" type="decimal" column="fee" precision="15" scale="2" nullable="false">
      <options>
        <option name="comment">手续费</option>
        <option name="default">0.00</option>
      </options>
    </field>
    <field name="receiveInterest" type="decimal" column="receive_interest" precision="15" scale="2" nullable="false">
      <options>
        <option name="comment">实际还款利息</option>
        <option name="default">0.00</option>
      </options>
    </field>
    <field name="receiveCapital" type="decimal" column="receive_capital" precision="15" scale="2" nullable="false">
      <options>
        <option name="comment">实际还款本金</option>
        <option name="default">0.00</option>
      </options>
    </field>
    <field name="status" type="boolean" column="status" nullable="false">
      <options>
        <option name="comment">0未满标，1待还款，2已还款</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="waitNotice" type="boolean" column="wait_notice" nullable="false">
      <options>
        <option name="comment">等待回调通知状态：0|一般状态 1|等待回调状态</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="sortOrder" type="boolean" column="sort_order" nullable="false">
      <options>
        <option name="comment">还款期数</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="total" type="boolean" column="total" nullable="false">
      <options>
        <option name="comment">还款总期数</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="repaymentTime" type="integer" column="repayment_time" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">实际还款时间</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="deadline" type="integer" column="deadline" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">合约还款时间</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="payDate" type="integer" column="pay_date" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">合约还款日期</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="repaymentDay" type="integer" column="repayment_day" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">计划还款日期Ymd格式</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="orderNo" type="string" column="order_no" length="50" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">订单号</option>
        <option name="default"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
