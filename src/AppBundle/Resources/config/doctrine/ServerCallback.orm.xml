<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\ServerCallback" table="server_callback">
    <indexes>
      <index name="uid" columns="uid"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="uid" type="integer" column="uid" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">用户id</option>
      </options>
    </field>
    <field name="addTime" type="datetime" column="add_time" nullable="false">
      <options>
        <option name="comment">记录添加时间</option>
        <option name="default">CURRENT_TIMESTAMP</option>
      </options>
    </field>
    <field name="addRule" type="integer" column="add_rule" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">添加规则：0、手动分配；1、用户首次注册后未投资；2、用户回款；3、用户成功充值；4、用户长时间充值失败；5、投资额度 6、连续签到 9、新注册用户（投资顾问类型）</option>
      </options>
    </field>
    <field name="addReason" type="string" column="add_reason" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">记录添加具体原因</option>
      </options>
    </field>
    <field name="reasonType" type="integer" column="reason_type" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">二级分类类型</option>
      </options>
    </field>
    <field name="callInTime" type="datetime" column="call_in_time" nullable="false">
      <options>
        <option name="comment">用户打入客服电话时间</option>
      </options>
    </field>
    <field name="callBackReason" type="string" column="call_back_reason" length="100" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">用户符合的回访原因</option>
      </options>
    </field>
    <field name="callBackStatus" type="integer" column="call_back_status" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">客服回访状态：0、未回访，1、已回访</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="callBackRule" type="integer" column="call_back_rule" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">客服最终回访对应规则。对应add_rule字段。1、用户首次注册后未投资；2、用户回款；3、用户成功充值；4、用户长时间充值失败；5、投资额度</option>
      </options>
    </field>
    <field name="recordTime" type="string" column="record_time" length="50" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">记录时间变量</option>
      </options>
    </field>
    <field name="rank" type="integer" column="rank" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">具体类型排名顺序</option>
      </options>
    </field>
    <field name="serviceId" type="integer" column="service_id" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">客服id</option>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
