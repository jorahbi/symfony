<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\ConsumerActivityPrize" table="consumer_activity_prize">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="prizeName" type="string" column="prize_name" length="255" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">奖品名称</option>
      </options>
    </field>
    <field name="prizeType" type="integer" column="prize_type" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">奖品类型</option>
      </options>
    </field>
    <field name="prizeRate" type="integer" column="prize_rate" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">奖品概率（总和10000）</option>
      </options>
    </field>
    <field name="totalPrize" type="integer" column="total_prize" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">奖品库存数量</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
