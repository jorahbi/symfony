<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\BorrowAuto" table="borrow_auto">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="uid" type="integer" column="uid" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">用户ID</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="bid" type="integer" column="bid" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">项目ID</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="iid" type="integer" column="iid" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">投资记录ID</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="borrowType" type="boolean" column="borrow_type" nullable="false">
      <options>
        <option name="comment">项目类型</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="money" type="integer" column="money" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">投资金额</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="coupons" type="integer" column="coupons" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">红包抵扣金额</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="addTime" type="integer" column="add_time" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">申请时间</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="dealTime" type="integer" column="deal_time" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">处理时间</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="status" type="boolean" column="status" nullable="false">
      <options>
        <option name="comment">确认信息：1已预约 2已确认 3已完成 4已取消 5处理失败</option>
        <option name="default">1</option>
      </options>
    </field>
    <field name="client" type="boolean" column="client" nullable="false">
      <options>
        <option name="comment">见client_type.php</option>
        <option name="default">1</option>
      </options>
    </field>
    <field name="freezeOrder" type="string" column="freeze_order" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">冻结订单号</option>
        <option name="default"/>
      </options>
    </field>
    <field name="info" type="string" column="info" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">备注信息(处理结果)</option>
        <option name="default"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
