<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Group" table="group">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="50" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">分组名</option>
        <option name="default"/>
      </options>
    </field>
    <field name="status" type="boolean" column="status" nullable="false">
      <options>
        <option name="comment">状态0隐藏1显示</option>
        <option name="default">1</option>
      </options>
    </field>
    <field name="lft" type="integer" column="lft" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">左值</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="rgt" type="integer" column="rgt" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">右值</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="value" type="text" column="value" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">权限</option>
      </options>
    </field>
    <field name="type" type="boolean" column="type" nullable="false">
      <options>
        <option name="comment">分组类型：1部门，2职位</option>
        <option name="default">1</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
