<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Reward" table="reward">
    <indexes>
      <index name="order_no" columns="order_no"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="uid" type="integer" column="uid" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">用户ID</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="bid" type="integer" column="bid" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">标ID</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="investId" type="integer" column="invest_id" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">投资记录ID</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="type" type="integer" column="type" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">奖励类型：1|推荐奖励</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="targetType" type="integer" column="target_type" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">目标类型：例如投资积分奖励类型1</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="value" type="decimal" column="value" precision="15" scale="2" nullable="false">
      <options>
        <option name="comment">给用户奖励的数量</option>
        <option name="default">0.00</option>
      </options>
    </field>
    <field name="info" type="string" column="info" length="100" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">备注信息</option>
        <option name="default"/>
      </options>
    </field>
    <field name="addTime" type="integer" column="add_time" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="orderNo" type="string" column="order_no" length="50" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">代收订单号</option>
        <option name="default"/>
      </options>
    </field>
    <field name="orderNoPay" type="string" column="order_no_pay" length="50" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">代付订单号</option>
        <option name="default"/>
      </options>
    </field>
    <field name="status" type="boolean" column="status" nullable="false">
      <options>
        <option name="comment">1未获取，2可获取，3已获取</option>
        <option name="default">1</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
