<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\BorrowPayment" table="borrow_payment">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="bid" type="integer" column="bid" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">标ID</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="uid" type="integer" column="uid" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">还款用户ID</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="totalMoney" type="decimal" column="total_money" precision="15" scale="2" nullable="false">
      <options>
        <option name="comment">合约还款总额</option>
        <option name="default">0.00</option>
      </options>
    </field>
    <field name="capital" type="decimal" column="capital" precision="15" scale="2" nullable="false">
      <options>
        <option name="comment">合约还款本金</option>
        <option name="default">0.00</option>
      </options>
    </field>
    <field name="interest" type="decimal" column="interest" precision="15" scale="2" nullable="false">
      <options>
        <option name="comment">合约还款利息</option>
        <option name="default">0.00</option>
      </options>
    </field>
    <field name="payInterest" type="decimal" column="pay_interest" precision="15" scale="2" nullable="false">
      <options>
        <option name="comment">实际利息</option>
        <option name="default">0.00</option>
      </options>
    </field>
    <field name="baseInterest" type="decimal" column="base_interest" precision="15" scale="2" nullable="false">
      <options>
        <option name="comment">应收利息（针对于贷款方利息）</option>
        <option name="default">0.00</option>
      </options>
    </field>
    <field name="deadline" type="integer" column="deadline" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">合约还款时间</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="deadlineDate" type="integer" column="deadline_date" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">回款日期Ymd</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="sortOrder" type="boolean" column="sort_order" nullable="false">
      <options>
        <option name="comment">合约还款期数</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="total" type="boolean" column="total" nullable="false">
      <options>
        <option name="comment">合约还款总期数</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="status" type="boolean" column="status" nullable="false">
      <options>
        <option name="comment">还款状态：1|未还款，2|已收款，3|已还款，4|待回调</option>
        <option name="default">1</option>
      </options>
    </field>
    <field name="isOverdue" type="boolean" column="is_overdue" nullable="false">
      <options>
        <option name="comment">是否逾期：0|否，1|是，2|逾期结束</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="orderNo" type="string" column="order_no" length="50" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">代收订单号</option>
        <option name="default"/>
      </options>
    </field>
    <field name="dealStatus" type="boolean" column="deal_status" nullable="false">
      <options>
        <option name="comment">平台贴息状态 1已处理贴息，0未处理贴息</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
