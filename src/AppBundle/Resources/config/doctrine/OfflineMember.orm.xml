<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\OfflineMember" table="offline_member">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="serviceId" type="integer" column="service_id" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">客服ID</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="isRegister" type="boolean" column="is_register" nullable="false">
      <options>
        <option name="comment">是否注册：0否1是</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="realName" type="string" column="real_name" length="50" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">客户姓名</option>
        <option name="default"/>
      </options>
    </field>
    <field name="userPhone" type="string" column="user_phone" length="20" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">手机号</option>
        <option name="default"/>
      </options>
    </field>
    <field name="idCardType" type="boolean" column="id_card_type" nullable="false">
      <options>
        <option name="comment">证件类型：见id_card_type</option>
        <option name="default">1</option>
      </options>
    </field>
    <field name="idCard" type="string" column="id_card" length="50" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">证件号</option>
        <option name="default"/>
      </options>
    </field>
    <field name="birthday" type="date" column="birthday" nullable="false">
      <options>
        <option name="comment">出生日期</option>
        <option name="default">0000-00-00</option>
      </options>
    </field>
    <field name="sex" type="boolean" column="sex" nullable="false">
      <options>
        <option name="comment">1:男|2:女</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="recommend" type="string" column="recommend" length="10" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">邀请码</option>
        <option name="default"/>
      </options>
    </field>
    <field name="isGolden" type="boolean" column="is_golden" nullable="false">
      <options>
        <option name="comment">金账户开户条件:1|是，2|否</option>
        <option name="default">2</option>
      </options>
    </field>
    <field name="addTime" type="integer" column="add_time" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">添加时间</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="serviceTime" type="integer" column="service_time" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">客服最新分配时间</option>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
