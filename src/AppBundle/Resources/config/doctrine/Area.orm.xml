<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Area" table="area">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">省/市名称</option>
        <option name="default"/>
      </options>
    </field>
    <field name="pid" type="integer" column="pid" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">父Id</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="level" type="boolean" column="level" nullable="false">
      <options>
        <option name="comment">层级</option>
        <option name="default">1</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
