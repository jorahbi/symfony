<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Article" table="article">
    <indexes>
      <index name="type_id" columns="type_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="typeId" type="integer" column="type_id" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">所属栏目</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="type" type="boolean" column="type" nullable="false">
      <options>
        <option name="comment">文章类型：0文章1跳转</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="title" type="string" column="title" length="50" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">标题</option>
        <option name="default"/>
      </options>
    </field>
    <field name="intro" type="string" column="intro" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">文章简介|文章摘要</option>
        <option name="default"/>
      </options>
    </field>
    <field name="content" type="text" column="content" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">文章内容</option>
      </options>
    </field>
    <field name="author" type="string" column="author" length="20" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">作者</option>
        <option name="default"/>
      </options>
    </field>
    <field name="url" type="string" column="url" length="200" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">跳转地址</option>
        <option name="default"/>
      </options>
    </field>
    <field name="cover" type="string" column="cover" length="200" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">封面</option>
        <option name="default"/>
      </options>
    </field>
    <field name="hits" type="integer" column="hits" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">点击量</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="hot" type="boolean" column="hot" nullable="false">
      <options>
        <option name="comment">置顶：0不置顶，1置顶</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="addTime" type="integer" column="add_time" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">添加时间</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="seoTitle" type="string" column="seo_title" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">seo标题</option>
        <option name="default"/>
      </options>
    </field>
    <field name="seoDes" type="text" column="seo_des" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">seo简介</option>
      </options>
    </field>
    <field name="seoKwd" type="text" column="seo_kwd" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">seo关键字</option>
      </options>
    </field>
    <field name="sort" type="smallint" column="sort" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
