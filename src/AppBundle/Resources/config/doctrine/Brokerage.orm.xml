<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Brokerage" table="brokerage">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="month" type="integer" column="month" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">月份，格式：201503</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="realName" type="string" column="real_name" length="20" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">姓名</option>
        <option name="default"/>
      </options>
    </field>
    <field name="userIdcard" type="string" column="user_idcard" length="30" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">身份证号码</option>
        <option name="default"/>
      </options>
    </field>
    <field name="userPhone" type="string" column="user_phone" length="30" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">手机号码</option>
        <option name="default"/>
      </options>
    </field>
    <field name="jobNum" type="string" column="job_num" length="20" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">员工工号</option>
        <option name="default"/>
      </options>
    </field>
    <field name="money" type="decimal" column="money" precision="15" scale="2" nullable="false">
      <options>
        <option name="comment">工资</option>
        <option name="default">0.00</option>
      </options>
    </field>
    <field name="status" type="boolean" column="status" nullable="false">
      <options>
        <option name="comment">状态：1待审核，2待审核，3审核不通过，4完成，5发放工资异常，6驳回工资异常</option>
        <option name="default">1</option>
      </options>
    </field>
    <field name="info" type="string" column="info" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">备注信息</option>
        <option name="default"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
