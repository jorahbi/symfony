<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\OverdueDetail" table="overdue_detail">
    <indexes>
      <index name="borrower_id" columns="borrower_id"/>
      <index name="subject_id" columns="subject_id"/>
      <index name="repay_id" columns="repay_id"/>
      <index name="repay_fee_id" columns="repay_fee_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="borrowerId" type="integer" column="borrower_id" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">借款人ID</option>
      </options>
    </field>
    <field name="subjectId" type="integer" column="subject_id" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">标的ID</option>
      </options>
    </field>
    <field name="repayId" type="integer" column="repay_id" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">合约还款ID</option>
      </options>
    </field>
    <field name="repayPeriods" type="boolean" column="repay_periods" nullable="true">
      <options>
        <option name="comment">合约还款期数</option>
      </options>
    </field>
    <field name="repayFeeId" type="integer" column="repay_fee_id" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">逾期费用计算公式ID</option>
      </options>
    </field>
    <field name="principal" type="decimal" column="principal" precision="14" scale="2" nullable="true">
      <options>
        <option name="comment">逾期本金</option>
      </options>
    </field>
    <field name="rate" type="decimal" column="rate" precision="4" scale="2" nullable="true">
      <options>
        <option name="comment">借款年利率（单位：数字）</option>
      </options>
    </field>
    <field name="nDays" type="integer" column="n_days" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">逾期第N天</option>
      </options>
    </field>
    <field name="interest" type="decimal" column="interest" precision="14" scale="2" nullable="true">
      <options>
        <option name="comment">逾期罚息（单位：元）</option>
      </options>
    </field>
    <field name="createdAt" type="datetime" column="created_at" nullable="true">
      <options>
        <option name="comment">创建时间</option>
      </options>
    </field>
    <field name="updatedAt" type="datetime" column="updated_at" nullable="true">
      <options>
        <option name="comment">更新时间</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
