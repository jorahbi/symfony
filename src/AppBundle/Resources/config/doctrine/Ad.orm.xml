<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Ad" table="ad">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="200" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">广告标题</option>
        <option name="default"/>
      </options>
    </field>
    <field name="data" type="text" column="data" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">图片地址：json格式</option>
      </options>
    </field>
    <field name="stime" type="integer" column="stime" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">开始时间</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="etime" type="integer" column="etime" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">结束时间</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="version" type="boolean" column="version" nullable="false">
      <options>
        <option name="comment">版本号</option>
        <option name="default">1</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
